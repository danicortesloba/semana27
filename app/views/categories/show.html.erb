<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-6">
      <h3>
        <strong>Name:</strong>
        <%= @category.name %>
      </h3>

      <%= form_with model: [ @category, @product ], local: true do |form| %>
      <%= form.hidden_field :category_id, value: @category.id %>

      <div class="field">
        <%= form.label "Nombre" %>
        <%= form.text_field :name %>
      </div>

      <div class="field">
        <%= form.label "Precio" %>
        <%= form.text_field :price %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
      <% end %>
    </div>
    <div class="col-md-6">
      <h3> Productos: </h3>
        <% @category.products.each do |product| %>
        <ul>
          <li>
            <h4><%= product.name %></h4>:
            <h4><%= product.price %></h4><br>
            <%= link_to "Borrar", category_product_path(@category, product), class: 'btn btn-danger', method: :delete %>
          </li>
        </ul>
<% end %>

    </div>
</div>

<%= link_to 'Editar Categoría', edit_category_path(@category), class: 'btn btn-primary' %> |
<%= link_to 'Atrás', categories_path, class: 'btn btn-success' %>
